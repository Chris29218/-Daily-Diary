<%- include('partials/header') -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">
            <label class="form-check-label" for="title">Title</label>
            <br>
            <input type="text" class="form-control" name="inputTitle">
        </div>
        <div class="form-group">
            <label class="form-check-label" for="decription">Description</label>
            <br>
            <textarea rows = "5" cols="30" class="form-control" name="inputData"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="btn">Publish</button>
    </form>
    
<%- include('partials/footer') -%>